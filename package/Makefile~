all: init nPDyn 

init:
	pip3 install -r requirements.txt

nPDyn: setup.py
ifeq ($(OS), Windows_NT)
	python setup.py build --compiler=mingw32
else
	python3 setup.py build
endif



.PHONY: install
install:
ifeq ($(OS), Windows_NT)
	python setup.py install --compiler=mingw32
else
	python3 setup.py install
endif


.PHONY: clean
clean:
	rm -r build
	cd nPDyn/lib/ && rm *.c 

